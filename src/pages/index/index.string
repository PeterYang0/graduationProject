{{#products}}
	<li class="p-item">
		<div class="p-img-con">
			<a class="link" href="./detail.html?productId={{_id}}" target="_blank">
				<img class="p-img" src="../../../server/upload/{{productUrl}}" alt='{{productName}}'/>
			</a>
		</div>
		<div class="p-price-con">
			{{#isDiscount}}
			<s class="p-name">￥{{productPrice}} &nbsp;</s>
			<span class="p-price">{{productDiscount}}折优惠</span>
			<span class="p-price">现价{{productNowprice}}</span>
			{{/isDiscount}}
			{{^isDiscount}}
			<span class="p-price">￥{{productPrice}}</span>
			{{/isDiscount}}
		</div>
		<div class="p-name-con">
			<a href="./detail.html?productId={{_id}}" class="p-name" target="_blank">{{productName}}</a>
		</div>
	</li>
{{/products}}
{{^products}}
	<p class='errtips'>未找到该商品</p>
{{/products}}